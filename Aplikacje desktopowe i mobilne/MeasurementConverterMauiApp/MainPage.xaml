<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeasurementConverterMauiApp.MainPage"
             x:Name="thisPage"
             BindingContext="{Binding thisPage}">
    
    
    <StackLayout>
        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">

            <StackLayout Margin="50, 0, 50, 0">
                <Label Text="Masa źródłowa"/>
                <Picker ItemsSource="{Binding UnitsCollection}"
                        SelectedItem="{Binding FirstUnits}"/>
            </StackLayout>

            <StackLayout Margin="50, 0, 50, 0">
                <Label Text="Masa docelowa"/>
                <Picker/>
            </StackLayout>
            
        </StackLayout>
        <Label Text="Podaj miare: "/>

        <Entry Text="{Binding Calculate}"/>

        <Button Text="Oblicz"
                HorizontalOptions="Center"
                Margin="0, 10, 0, 10"
                Clicked="Button_Clicked"/>
        <Label/>
    </StackLayout>

</ContentPage>
