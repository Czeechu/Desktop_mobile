<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Quiz.Views.MainPage"
             xmlns:viewmodels="clr-namespace:Quiz.ViewModels"
             xmlns:converters="clr-namespace:Quiz.Converters"
             >

    <ContentPage.BindingContext>
        <viewmodels:QuizViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:CurrentAnswerToBoolConverter x:Key="CurrentAnswerToBoolConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    <StackLayout Padding="20">
        <Label Text="Pytania"
               FontSize="30"
               HorizontalOptions="Center" />

        <StackLayout>
            <Label Text="{Binding CurrentQuestionText}"
                   FontSize="20" 
                   HorizontalOptions="Center" />

            <StackLayout>
                <RadioButton
                             Content="{Binding CurrentAnswers[0]}" 
                             IsChecked="{Binding SelectedAnswer,Converter={StaticResource CurrentAnswerToBoolConverter},ConverterParameter={Binding CurrentAnswers[0]}}" />
                
                <RadioButton
                             Content="{Binding CurrentAnswers[1]}" 
                             IsChecked="{Binding SelectedAnswer,Converter={StaticResource CurrentAnswerToBoolConverter},ConverterParameter={Binding CurrentAnswers[1]}}"  />
                
                <RadioButton
                             Content="{Binding CurrentAnswers[2]}" 
                             IsChecked="{Binding SelectedAnswer,Converter={StaticResource CurrentAnswerToBoolConverter},ConverterParameter={Binding CurrentAnswers[2]}}"  />
                
                <RadioButton
                             Content="{Binding CurrentAnswers[3]}" 
                             IsChecked="{Binding SelectedAnswer,Converter={StaticResource CurrentAnswerToBoolConverter},ConverterParameter={Binding CurrentAnswers[3]}}"  />
            </StackLayout>
        </StackLayout>

        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
            <Button Text="Poprzednie pytanie" 
                    Command="{Binding PreviousQuestionCommand}" />
            <Button Text="Następne pytanie" 
                    Command="{Binding NextQuestionCommand}" />
            <Button Text="Sprawdź odpowiedź" 
                    Command="{Binding CheckAnswerCommand}" />
        </StackLayout>

        <Label Text="{Binding Feedback}"
               FontSize="20"
               TextColor="Red"
               HorizontalOptions="Center" />
    </StackLayout>
</ContentPage>
